<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.zeemoo.rbac.mapper.LoginInfoRoleMapper">
    <resultMap id="BaseResultMap" type="cn.zeemoo.rbac.domain.LoginInfoRole">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="login_info_id" property="loginInfoId" jdbcType="BIGINT"/>
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP"/>
        <result column="role_sn" property="roleSn" jdbcType="VARCHAR"/>
    </resultMap>

    <delete id="deleteByPrimaryKey">
        delete from `rbac_login_info_role`
        where id = #{id,jdbcType=BIGINT}
    </delete>

    <insert id="insert">
        insert into `rbac_login_info_role` (id, create_time, login_info_id,
          modify_time, role_sn)
        values (#{id,jdbcType=BIGINT}, #{createTime,jdbcType=TIMESTAMP}, #{loginInfoId,jdbcType=BIGINT},
          #{modifyTime,jdbcType=TIMESTAMP}, #{roleSn,jdbcType=VARCHAR})
    </insert>

    <update id="updateByPrimaryKey">
        update `rbac_login_info_role`
        set create_time = #{createTime,jdbcType=TIMESTAMP},
          login_info_id = #{loginInfoId,jdbcType=BIGINT},
          modify_time = #{modifyTime,jdbcType=TIMESTAMP},
          role_sn = #{roleSn,jdbcType=VARCHAR}
        where id = #{id,jdbcType=BIGINT}
     </update>

    <sql id="BaseColumns">
        id, create_time, login_info_id, modify_time, role_sn
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap">
        select
        <include refid="BaseColumns"/>
        from `rbac_login_info_role`
        where id = #{id,jdbcType=BIGINT}
    </select>

    <select id="selectAll" resultMap="BaseResultMap">
        select
        <include refid="BaseColumns"/>
        from `rbac_login_info_role`
    </select>

    <select id="selectAllByLoginInfoId" resultMap="BaseResultMap">
        SELECT
        <include refid="BaseColumns"/>
        FROM `rbac_login_info_role`
        WHERE login_info_id = #{loginInfoId}
    </select>

    <delete id="deleteInBatch" parameterType="java.util.List">
        DELETE FROM `rbac_login_info_role` WHERE login_info_id IN
        <foreach collection="loginInfoRoles" open="(" close=")" item="loginInfoRole" separator=",">
            #{loginInfoRole.id}
        </foreach>
    </delete>

    <insert id="insertAll" parameterType="java.util.List">
        INSERT INTO `rbac_login_info_role` (id, create_time, login_info_id, modify_time, role_sn) VALUES
        <foreach collection="loginInfoRoles" separator="," item="loginInfoRole">
            (#{loginInfoRole.id},#{loginInfoRole.createTime},#{loginInfoRole.loginInfoId},#{loginInfoRole.modifyTime},#{loginInfoRole.roleSn})
        </foreach>
    </insert>
</mapper>